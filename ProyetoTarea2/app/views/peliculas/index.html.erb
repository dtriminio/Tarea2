<p id="notice"><%= notice %></p>

<h1>Listing Peliculas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Genero</th>
      <th>Anio</th>
      <th>Duracion</th>
      <th>Actor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @peliculas.each do |pelicula| %>
      <tr>
        <td><%= pelicula.Nombre %></td>
        <td><%= pelicula.Genero %></td>
        <td><%= pelicula.Anio %></td>
        <td><%= pelicula.Duracion %></td>
        <td><%= pelicula.Actor %></td>
        <td><%= link_to 'Show', pelicula %></td>
        <td><%= link_to 'Edit', edit_pelicula_path(pelicula) %></td>
        <td><%= link_to 'Destroy', pelicula, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

